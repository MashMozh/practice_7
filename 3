import math

def is_perfect_square(num):
    """Проверяет, является ли число полным квадратом."""
    if num < 0:
        return False
    root = math.isqrt(num)  # Находим целочисленный корень
    return root * root == num  # Проверяем, является ли квадрат корня равным числу

while True:
    try:
        # Запрашиваем у пользователя ввод числа
        number = int(input("Введите число: "))

        # Проверяем, является ли число полным квадратом
        if is_perfect_square(number):
            print(f"{number} является полным квадратом.")
            break  # Выходим из цикла, если число полное квадрат
        else:
            print(f"{number} не является полным квадратом. Попробуйте снова.")
    
    except ValueError:
        print("Пожалуйста, введите корректное целое число.")
