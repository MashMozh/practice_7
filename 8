import math

# Запрашиваем у пользователя ввод числа N
try:
    N = int(input("Введите натуральное число N: "))

    # Проверяем, что N является натуральным числом
    if N < 1:
        print("Пожалуйста, введите натуральное число больше 0.")
    else:
        # Вычисляем наименьшее количество вопросов
        questions_needed = math.ceil(math.log2(N))
        print("Наименьшее количество вопросов, необходимых для отгадывания числа:", questions_needed)

except ValueError:
    print("Пожалуйста, введите корректное натуральное число.")
